<div class="container">
    <h1>Burgers</h1>
    <div class="row">
        <div class="col-6">
            <h2>Burgers: ready</h2>
            <ul>
                {{#each burgers}} 
                    {{#unless this.devoured}} 
                        <p>
                            <span class="label">Item:</span> 
                            {{this.burger_name}} 
                            {{!-- {{> burger-block devoured=true}} --}}
                            {{!-- <a href="/{{this.id}}">Update this quote</a> --}}

                        </p>
                    {{/unless}} 
                {{/each}}
            </ul>

            <h2>Burgers: Devoured</h2>
            <ul>
                {{#each burgers}} 
                    {{#if this.devoured}} 
                        <p><span class="label">Item:</span> {{this.burger_name}}</p>
                    {{/if}} 
                {{/each}}
            </ul>
        </div>

        <div class="col-6">
            <h2>Add new Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="burger_name">Item:</label>
                    <input type="text" id="burger_name" name="name">
                </div>
                <button type="submit" id="submit">Add it!</button>
            </form>
        </div>
    </div>
</div>
